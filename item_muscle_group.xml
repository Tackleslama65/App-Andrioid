<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"

    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B4CEBEAE"
        android:orientation="vertical"
        android:padding="5dp">

        <!-- Заголовок группы мышц -->

        <!-- Контейнер для упражнений -->

        <TextView
            android:id="@+id/muscleGroupTitle"
            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="10dp"
            android:text="Название группы"
            android:textAlignment="center"
            android:textColor="@color/selection_mode_background"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:id="@+id/muscleGroupContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <Button
            android:id="@+id/btnAddExercise"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/add_button"
            android:drawingCacheQuality="auto" />

        <LinearLayout
            android:id="@+id/btnDeleteCancelContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Удалить" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Отмена" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>